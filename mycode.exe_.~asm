.MODEL SMALL
.STACK 100H

.DATA
NUM1 DW 1234H
NUM2 DW 5687H


ADD_RES DW ?


SUB_RES DW ?

MUL_RES DW ?
QUOT    DW ?
REM     DW ?



.CODE

MAIN PROC
MOV AX,@DATA
MOV DS,AX

MOV AX,NUM1
ADD AX,NUM2
MOV ADD_RES,AX



; SUBTRACTION


MOV AX,NUM1
SUB AX,NUM2
MOV SUB_RES,AX




;MULTIPLICATION

MOV AX,NUM1
MOV BX,NUM2
MUL BX
MOV MUL_RES,AX
MOV MUL_RES+2,DX


;DIVISION


MOV AX,NUM1
MOV DX,0
MOV BX,NUM2
DIV BX
MOV QUOT,AX
MOV REM,DX



; EXIT PROGRAM

MOV AH,4CH
INT 21H

MAIN ENDP
END MAIN



